@using DAO;
@model tb_reserva
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Nueva Reserva</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.id_res, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.id_res, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.fec_res, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.fec_res, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.id_cli, new { @class = "control-label" })
        <select class="form-control" name="id_cli">
            @foreach (var item in ViewBag.ListaCliente)
            {
                <option value="@item.id_cli">@item.id_cli</option>
            }
        </select>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.id_mas, new { @class = "control-label" })
        <select class="form-control" name="id_mas">
            @foreach (var item in ViewBag.ListaMascota)
            {
                <option value="@item.id_mas">@item.id_mas</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success" />
    </div>
</div>
}
