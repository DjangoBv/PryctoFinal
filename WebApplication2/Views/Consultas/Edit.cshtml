@using DAO
@model  tb_consulta
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.id_cons)
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.id_cons, new { @class = "control-label" })
        @*<label>@Model.id_cli</label>*@
        @Html.TextBoxFor(model => model.id_cons, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.fec_cons, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.fec_cons, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.sint_cons, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.sint_cons, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.diag_cons, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.diag_cons, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
            @Html.LabelFor(modelo => modelo.id_mas, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.id_mas, htmlAttributes: new { @class = "form-control" , @readonly="readonly" })
        </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success" />
    </div>
</div>
}
