@using DAO;
@model tb_cliente
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Nuevo Cliente</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.id_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.id_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.nom_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.nom_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ape_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.ape_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.telFijo_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.telFijo_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.telMovil_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.telMovil_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.cor_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.cor_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.dir_cli, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.dir_cli, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success" />
    </div>
</div>
}
