@using DAO
@model  tb_mascota
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.id_mas)
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.id_mas, new { @class = "control-label" })
        @*<label>@Model.id_cli</label>*@
        @Html.TextBoxFor(model => model.id_mas, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.nom_mas, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.nom_mas, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.fecNacimiento_mas, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.fecNacimiento_mas, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(modelo => modelo.raza_mas, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.raza_mas, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
            @Html.LabelFor(modelo => modelo.id_cli, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.id_cli, htmlAttributes: new { @class = "form-control", @readonly="readonly"  })
        </div>
        <div class="form-group">
            @Html.LabelFor(modelo => modelo.id_tipMas, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.id_tipMas, htmlAttributes: new { @class = "form-control", @readonly="readonly"  })
        </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success" />
    </div>
</div>
}
    